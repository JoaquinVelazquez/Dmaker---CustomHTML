                                                {{#each this.nodes}}
                                                <li class="nav-tools-list--vertical__attribute header--custom-text">
                                                    <a href="{{this.url}}">{{this.name}}</a>
                                                </li>
                                                {{/each}}
                                            </div>
                                        </div>
                                        {{/each}}
                                    </div>
                                </div>

                                <li class="nav-tools-list--vertical__category header--custom-text how-buy__button"
                                    data-js="how-buy__button" itemprop="name"
                                    tools-custom-data-emitter="how-buy__button">
                                    <a href="{{linkToHowBuy.href}}">{{linkToHowBuy.label}}</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                    <!-- Desktop navigation menu -->
                    <div class="nav-tools-header__categories header--custom-background">
                        <ul itemscope itemtype="http://schema.org/SiteNavigationElement"
