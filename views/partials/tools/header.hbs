                                            <li class="header--custom-text">
                                                <a href="{{this.url}}">{{this.name}}</a>
                                                {{#if this.nodes}}
                                                <label for="attr-{{@../index}}-{{@index}}"
                                                    data-js="attribute-{{@../index}}" class="toggle-menu attribute">
                                                    <span class="nav-header__toggle"></span>
